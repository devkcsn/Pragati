// Delete selected items
function deleteSelectedItems(table) {
    const idField = (table === 'students' || table === 'coordinators') ? 'username' : 'id';
    const deletePromises = selectedItems[table].map(id => {
        return fetch(`/api/admin/delete/${table}/${idField}/${id}`, {
            method: 'DELETE',
            headers: {
                'Content-Type': 'application/json',
                'Cache-Control': 'no-cache'
            },
            credentials: 'same-origin'
        }).then(response => {
            if (!response.ok) {
                if (response.status === 401) {
                    // Session expired
                    window.location.href = window.location.pathname.replace('admin-dashboard', 'admin-access');
                    throw new Error('Session expired. Please log in again.');
                }
                return response.json().then(err => {
                    throw new Error(err.message || 'Unknown error');
                });
            }
            return response.json();
        });
    });
    
    Promise.all(deletePromises)
        .then(results => {
            const successCount = results.filter(result => result.success).length;
            
            if (successCount > 0) {
                alert(`Successfully deleted ${successCount} item(s)`);
                loadTableData(table, currentPage); // Reload current page
                
                // Clear selected items
                selectedItems[table] = [];
            } else {
                alert('Failed to delete items');
            }
            
            // Close the modal
            const modal = bootstrap.Modal.getInstance(document.getElementById('deleteConfirmModal'));
            modal.hide();
        })
        .catch(error => {
            console.error('Delete error:', error);
            alert(`Error: ${error.message}`);
            
            // Close the modal
            const modal = bootstrap.Modal.getInstance(document.getElementById('deleteConfirmModal'));
            modal.hide();
        });
}

