                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Delete Confirmation Modal -->
    <div class="modal fade" id="deleteConfirmModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title">Confirm Deletion</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to delete the selected record(s)? This action cannot be undone.</p>
                    <div id="delete-info"></div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-danger" id="confirmDeleteBtn">Delete</button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>

// Global variables
let currentTable = '';
let selectedItems = {};
let currentPage = 1;
const limit = 10;

// Main initialization function
function initAdminDashboard() {
    // Initialize selected items for each table
    ['students', 'coordinators', 'quizzes', 'quiz_attempts', 'quiz_security_logs'].forEach(table => {
        selectedItems[table] = [];
    });
    
    // Set up tab navigation
    setupTabNavigation();
    
    // Set up delete confirmation button
    setupDeleteConfirmation();
    
    // Check if we need to load data for the current tab on page load
    checkInitialTab();
}

// Set up tab navigation
function setupTabNavigation() {
    const navLinks = document.querySelectorAll('.sidebar .nav-link');
    
    navLinks.forEach(link => {
        link.addEventListener('click', function(e) {
            e.preventDefault();
            
            // Get the target tab ID (remove the # from href)
            const targetId = this.getAttribute('href').substring(1);
            
            // Update active class on nav links
            navLinks.forEach(navLink => navLink.classList.remove('active'));
            this.classList.add('active');
            
            // Hide all tab panes
            const tabPanes = document.querySelectorAll('.tab-pane');
            tabPanes.forEach(pane => {
                pane.classList.remove('show', 'active');
            });
            
            // Show the selected tab pane
            const selectedPane = document.getElementById(targetId);
            if (selectedPane) {
                selectedPane.classList.add('show', 'active');
                
                // Load data for non-dashboard tabs
                if (targetId !== 'dashboard') {
                    loadTableData(targetId);
                }
            }
        });
    });
}

// Set up delete confirmation button
function setupDeleteConfirmation() {
    const deleteConfirmBtn = document.getElementById('confirmDeleteBtn');
    if (deleteConfirmBtn) {
        deleteConfirmBtn.addEventListener('click', function() {
            if (window.deleteCallback && typeof window.deleteCallback === 'function') {
                window.deleteCallback();
            }
        });
    }
}

// Check which tab is active on page load and load data if needed
function checkInitialTab() {
    const activeTab = document.querySelector('.nav-link.active');
    if (activeTab) {
        const targetId = activeTab.getAttribute('href').substring(1);
        if (targetId !== 'dashboard') {
            // Ensure we're on a data tab - load its data
            loadTableData(targetId);
        }
    }
}

// Load table data from API
function loadTableData(table, page = 1) {
    // Update global variables
    currentTable = table;
    currentPage = page;
    
    console.log(`Loading data for table: ${table}, page: ${page}`);
    
    // Get the container for this table
    const container = document.getElementById(`${table}-data-container`);
    if (!container) {
        console.error(`Container element not found: ${table}-data-container`);
        return;
    }
    
    // Show loading indicator
    container.innerHTML = '<div class="text-center my-5"><div class="spinner-border" role="status"></div><p class="mt-2">Loading data...</p></div>';
    
    // Add timestamp to prevent caching
    const timestamp = new Date().getTime();
    
    // Make API request with credentials
    fetch(`/api/admin/data/${table}?page=${page}&limit=${limit}&_=${timestamp}`, {
        method: 'GET',
        headers: {
            'Content-Type': 'application/json',
            'Cache-Control': 'no-cache'
        },
        credentials: 'same-origin' // Include cookies for authentication
    })
    .then(response => {
        if (!response.ok) {
            if (response.status === 401) {
                // Session expired or not authenticated
                alert('Your session has expired. Please log in again.');
                const currentPath = window.location.pathname;
                window.location.href = currentPath.replace('admin-dashboard', 'admin-access');
                throw new Error('Authentication failed');
            }
            throw new Error(`HTTP error! Status: ${response.status}`);
        }
        return response.json();
    })
    .then(data => {
        console.log(`Data loaded for ${table}:`, data);
        renderTable(table, data);
    })
    .catch(error => {
        console.error('Error loading data:', error);
        container.innerHTML = `
            <div class="alert alert-danger">
                <h4>Error loading data</h4>
                <p>${error.message}</p>
                <div class="mt-3">
                    <button class="btn btn-outline-primary" onclick="loadTableData('${table}', ${page})">
                        <i class="fas fa-sync-alt me-1"></i> Try Again
                    </button>
                </div>
            </div>
        `;
    });
}

// Render table with data
function renderTable(table, data) {
    const container = document.getElementById(`${table}-data-container`);
    
    // Check if we have valid data
    if (!data || !data.data || !Array.isArray(data.data)) {
        container.innerHTML = '<div class="alert alert-warning">No data available or invalid response format</div>';
        return;
    }
    
    // Build table HTML
    let html = `
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>
                            <input type="checkbox" id="${table}-select-all" onchange="toggleSelectAll('${table}')">
                        </th>
                        ${buildTableHeaders(table, data.data)}
                    </tr>
                </thead>
                <tbody>
    `;
    
    // Add rows
    if (data.data.length === 0) {
        html += `<tr><td colspan="20" class="text-center">No data found</td></tr>`;
    } else {
        data.data.forEach(item => {
            html += buildTableRow(table, item);
        });
    }
    
    html += `
                </tbody>
            </table>
        </div>
    `;
    
    // Add pagination
    if (data.pagination && data.pagination.pages > 1) {
        html += buildPagination(table, data.pagination);
    }
    
    container.innerHTML = html;
    
    // Check for checkboxes that should be checked
    if (selectedItems[table] && selectedItems[table].length > 0) {
        updateCheckboxes(table);
    }
}

// Build table headers based on column configuration
function buildTableHeaders(table, data) {
    if (!data || data.length === 0) return '<th>No Data</th>';
    
    const item = data[0];
    let headers = '';
    
    // Define column order and visibility for each table
    const columnConfig = {
        students: {
            username: 'Username',
            first_name: 'First Name',
            last_name: 'Last Name',
            email: 'Email',
            phone: 'Phone'
        },
        coordinators: {
            username: 'Username',
            first_name: 'First Name',
            last_name: 'Last Name',
            email: 'Email',
            phone: 'Phone'
        },
        quizzes: {
            id: 'ID',
            title: 'Title',
            description: 'Description',
            created_by: 'Created By',
            is_active: 'Status',
            duration: 'Duration (min)',
            created_date: 'Created Date'
        },
        quiz_attempts: {
            id: 'ID',
            quiz_id: 'Quiz ID',
            student_username: 'Student',
            score: 'Score',
            total_questions: 'Total Questions',
            completed_date: 'Completed Date',
            auto_submitted: 'Auto Submitted'
        },
        quiz_security_logs: {
            id: 'ID',
            quiz_id: 'Quiz ID',
            student_username: 'Student',
            issue_type: 'Event Type',
            timestamp: 'Timestamp',
            details: 'Details'
        }
    };
    
    // Use column config if available, otherwise use all columns
    const columns = columnConfig[table] || Object.keys(item);
    
    // Build headers based on available columns
    for (const [key, label] of Object.entries(columns)) {
        if (item.hasOwnProperty(key) && key !== 'password' && key !== 'PASSWORD') {
            headers += `<th>${label}</th>`;
        }
    }
    
    // Add actions column
    headers += '<th>Actions</th>';
    
    return headers;
}

// Build a table row
function buildTableRow(table, item) {
    let row = `<tr>`;
    
    // Add checkbox - using username for students/coordinators and id for other tables
    const idField = (table === 'students' || table === 'coordinators') ? 'username' : 'id';
    const idValue = item[idField];
    
    // Check if this item is selected
    const isSelected = selectedItems[table] && selectedItems[table].includes(idValue);
    
    row += `<td><input type="checkbox" value="${idValue}" ${isSelected ? 'checked' : ''} onchange="toggleSelectItem('${table}', '${idValue}')"></td>`;
    
    // Define column order and formatting for each table
    const columnConfig = {
        students: {
            username: val => val,
            first_name: val => val,
            last_name: val => val,
            email: val => val,
            phone: val => val || 'N/A'
        },
        coordinators: {
            username: val => val,
            first_name: val => val,
            last_name: val => val,
            email: val => val,
            phone: val => val || 'N/A'
        },
        quizzes: {
            id: val => val,
            title: val => val,
            description: val => val ? `<span title="${val}">${val.substring(0, 30)}${val.length > 30 ? '...' : ''}</span>` : 'N/A',
            created_by: val => val,
            is_active: val => `<span class="badge bg-${val ? 'success' : 'secondary'}">${val ? 'Active' : 'Inactive'}</span>`,
            duration: val => val || 'N/A',
            created_date: val => formatDate(val)
        },
        quiz_attempts: {
            id: val => val,
            quiz_id: val => val,
            student_username: val => val,
            score: val => val,
            total_questions: val => val,
            completed_date: val => formatDate(val),
            auto_submitted: val => `<span class="badge bg-${val ? 'warning' : 'info'}">${val ? 'Auto' : 'Manual'}</span>`
        },
        quiz_security_logs: {
            id: val => val,
            quiz_id: val => val,
            student_username: val => val,
            issue_type: val => `<span class="badge bg-${getEventTypeBadge(val)}">${val}</span>`,
            timestamp: val => formatDate(val),
            details: val => val ? `<span title="${val}">${val.substring(0, 30)}${val.length > 30 ? '...' : ''}</span>` : 'N/A'
        }
    };
    
    // Use column config if available, otherwise use all columns
    const columns = columnConfig[table] || Object.keys(item);
    
    // Build row cells based on available columns
    for (const [key, formatter] of Object.entries(columns)) {
        if (item.hasOwnProperty(key) && key !== 'password' && key !== 'PASSWORD') {
            const value = item[key];
            row += `<td>${formatter ? formatter(value) : (value !== undefined ? value : 'N/A')}</td>`;
        }
    }
    
    // Add action buttons
    row += `
        <td>
            <button class="btn btn-sm btn-outline-danger" onclick="confirmDelete('${table}', '${idField}', '${idValue}')">
                <i class="fas fa-trash"></i>
            </button>
        </td>
    `;
    
    row += `</tr>`;
    
    return row;
}

// Format date for display
function formatDate(dateString) {
    if (!dateString) return 'N/A';
    const date = new Date(dateString);
    return date.toLocaleString();
}

// Get badge color for event type
function getEventTypeBadge(eventType) {
    switch (eventType) {
        case 'TAB_SWITCH':
        case 'FOCUS_LOSS':
        case 'face-not-detected':
            return 'warning';
        case 'BROWSER_BACK':
        case 'SCREENSHOT':
        case 'COPY_ATTEMPT':
        case 'camera-access-denied':
            return 'danger';
        case 'LOGIN':
        case 'START':
        case 'SUBMIT':
            return 'info';
        case 'FINISH':
            return 'success';
        default:
            return 'secondary';
    }
}

// Build pagination controls
function buildPagination(table, pagination) {
    const { total, page, limit, pages } = pagination;
    
    let html = `
        <div class="d-flex justify-content-between align-items-center mt-3">
            <div>
                <span>Showing ${(page - 1) * limit + 1} to ${Math.min(page * limit, total)} of ${total} entries</span>
            </div>
            <nav aria-label="Page navigation">
                <ul class="pagination">
                    <li class="page-item ${page <= 1 ? 'disabled' : ''}">
                        <a class="page-link" href="#" onclick="event.preventDefault(); ${page > 1 ? `loadTableData('${table}', ${page - 1})` : ''}">Previous</a>
                    </li>
    `;
    
    // Show up to 5 page links
    const startPage = Math.max(1, page - 2);
    const endPage = Math.min(pages, startPage + 4);
    
    for (let i = startPage; i <= endPage; i++) {
        html += `
            <li class="page-item ${i === page ? 'active' : ''}">
                <a class="page-link" href="#" onclick="event.preventDefault(); loadTableData('${table}', ${i})">${i}</a>
            </li>
        `;
    }
    
    html += `
                    <li class="page-item ${page >= pages ? 'disabled' : ''}">
                        <a class="page-link" href="#" onclick="event.preventDefault(); ${page < pages ? `loadTableData('${table}', ${page + 1})` : ''}">Next</a>
                    </li>
                </ul>
            </nav>
        </div>
    `;
    
    return html;
}

// Update checkboxes based on selected items
function updateCheckboxes(table) {
    const checkboxes = document.querySelectorAll(`#${table}-data-container tbody input[type="checkbox"]`);
    const selectAllCheckbox = document.getElementById(`${table}-select-all`);
    
    // Update individual checkboxes
    checkboxes.forEach(checkbox => {
        if (selectedItems[table].includes(checkbox.value)) {
            checkbox.checked = true;
        }
    });
    
    // Update select all checkbox
    if (checkboxes.length > 0 && selectedItems[table].length === checkboxes.length) {
        selectAllCheckbox.checked = true;
    }
}

// Toggle select all items in a table
function toggleSelectAll(table) {
    const checkboxes = document.querySelectorAll(`#${table}-data-container tbody input[type="checkbox"]`);
    const selectAllCheckbox = document.getElementById(`${table}-select-all`);
    
    // Reset selected items
    if (selectAllCheckbox.checked) {
        // Select all items
        selectedItems[table] = Array.from(checkboxes).map(checkbox => checkbox.value);
    } else {
        // Deselect all items
        selectedItems[table] = [];
    }
    
    // Update checkboxes
    checkboxes.forEach(checkbox => {
        checkbox.checked = selectAllCheckbox.checked;
    });
}

// Toggle select individual item
function toggleSelectItem(table, id) {
    if (!selectedItems[table]) {
        selectedItems[table] = [];
    }
    
    if (selectedItems[table].includes(id)) {
        // Remove from selected
        selectedItems[table] = selectedItems[table].filter(item => item !== id);
    } else {
        // Add to selected
        selectedItems[table].push(id);
    }
    
    // Update select all checkbox
    const checkboxes = document.querySelectorAll(`#${table}-data-container tbody input[type="checkbox"]`);
    const selectAllCheckbox = document.getElementById(`${table}-select-all`);
    
    if (checkboxes.length > 0) {
        const allChecked = Array.from(checkboxes).every(checkbox => checkbox.checked);
        selectAllCheckbox.checked = allChecked;
    }
}

