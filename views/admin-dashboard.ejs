                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <h3>Security Logs</h3>
                                <div>
                                    <button class="btn btn-sm btn-outline-danger" onclick="confirmDeleteSelected('quiz_security_logs')">
                                        <i class="fas fa-trash me-1"></i> Delete Selected
                                    </button>
                                </div>
                            </div>
                            <div id="quiz_security_logs-data-container"></div>
