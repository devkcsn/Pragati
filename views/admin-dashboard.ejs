                                <h3>Coordinators</h3>
                                <div>
                                    <button class="btn btn-sm btn-outline-danger" onclick="confirmDeleteSelected('coordinators')">
                                        <i class="fas fa-trash me-1"></i> Delete Selected
                                    </button>
                                </div>
                            </div>
                            <div id="coordinators-data-container"></div>
