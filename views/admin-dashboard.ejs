                                <h3>Quizzes</h3>
                                <div>
                                    <button class="btn btn-sm btn-outline-danger" onclick="confirmDeleteSelected('quizzes')">
                                        <i class="fas fa-trash me-1"></i> Delete Selected
                                    </button>
                                </div>
                            </div>
                            <div id="quizzes-data-container"></div>
                        </div>
                    </div>
                    
                    <div class="tab-pane fade" id="attempts">
                        <div class="table-container">
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <h3>Quiz Attempts</h3>
                                <div>
                                    <button class="btn btn-sm btn-outline-danger" onclick="confirmDeleteSelected('quiz_attempts')">
                                        <i class="fas fa-trash me-1"></i> Delete Selected
