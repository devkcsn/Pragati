<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        body {
            background-color: #f8f9fa;
        }
        .sidebar {
            background-color: #343a40;
            color: white;
            height: 100vh;
            position: fixed;
            padding-top: 20px;
        }
        .sidebar a {
            color: rgba(255, 255, 255, 0.8);
            padding: 10px 15px;
            text-decoration: none;
            display: block;
        }
        .sidebar a:hover {
            color: white;
            background-color: rgba(255, 255, 255, 0.1);
        }
        .sidebar a.active {
            background-color: rgba(255, 255, 255, 0.2);
            color: white;
        }
        .main-content {
            margin-left: 250px;
            padding: 20px;
        }
        .stats-card {
            transition: transform 0.3s;
            cursor: pointer;
        }
        .stats-card:hover {
            transform: translateY(-5px);
        }
        .table-container {
            background-color: white;
            border-radius: 5px;
            padding: 20px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.05);
        }
        .admin-header {
            background-color: white;
            padding: 15px;
            margin-bottom: 20px;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.05);
        }
        .table-responsive {
            overflow-x: auto;
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-md-2 sidebar">
                <h4 class="text-center mb-4">Admin Panel</h4>
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link active" href="#dashboard" data-bs-toggle="tab">
                            <i class="fas fa-tachometer-alt me-2"></i> Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#students" data-bs-toggle="tab" onclick="loadTableData('students')">
                            <i class="fas fa-user-graduate me-2"></i> Students
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#coordinators" data-bs-toggle="tab" onclick="loadTableData('coordinators')">
                            <i class="fas fa-user-tie me-2"></i> Coordinators
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#quizzes" data-bs-toggle="tab" onclick="loadTableData('quizzes')">
                            <i class="fas fa-question-circle me-2"></i> Quizzes
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#attempts" data-bs-toggle="tab" onclick="loadTableData('quiz_attempts')">
                            <i class="fas fa-tasks me-2"></i> Quiz Attempts
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#security" data-bs-toggle="tab" onclick="loadTableData('quiz_security_logs')">
                            <i class="fas fa-shield-alt me-2"></i> Security Logs
                        </a>
                    </li>
                    <li class="nav-item mt-5">
                        <a class="nav-link text-danger" href="/admin-logout/<%= token %>">
                            <i class="fas fa-sign-out-alt me-2"></i> Logout
                        </a>
                    </li>
                </ul>
            </div>
            
            <!-- Main Content -->
            <div class="col-md-10 main-content">
                <div class="admin-header d-flex justify-content-between align-items-center">
                    <h2>Admin Dashboard</h2>
                    <div>
                        <span class="badge bg-dark"><%=admin.access_level%></span>
                        <span class="ms-2"><%=admin.username%></span>
                    </div>
                </div>
                
                <div class="tab-content">
                    <!-- Dashboard Tab -->
                    <div class="tab-pane fade show active" id="dashboard">
                        <div class="row mb-4">
                            <div class="col-md-4">
                                <div class="card stats-card bg-primary text-white mb-3">
                                    <div class="card-body d-flex justify-content-between align-items-center">
                                        <div>
                                            <h5 class="card-title">Students</h5>
                                            <h2><%= stats.students %></h2>
                                        </div>
                                        <i class="fas fa-user-graduate fa-3x"></i>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="card stats-card bg-success text-white mb-3">
                                    <div class="card-body d-flex justify-content-between align-items-center">
                                        <div>
                                            <h5 class="card-title">Coordinators</h5>
                                            <h2><%= stats.coordinators %></h2>
                                        </div>
                                        <i class="fas fa-user-tie fa-3x"></i>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="card stats-card bg-info text-white mb-3">
                                    <div class="card-body d-flex justify-content-between align-items-center">
                                        <div>
                                            <h5 class="card-title">Quizzes</h5>
                                            <h2><%= stats.quizzes %></h2>
                                        </div>
                                        <i class="fas fa-question-circle fa-3x"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="row mb-4">
                            <div class="col-md-6">
                                <div class="card stats-card bg-warning text-dark mb-3">
                                    <div class="card-body d-flex justify-content-between align-items-center">
                                        <div>
                                            <h5 class="card-title">Quiz Attempts</h5>
                                            <h2><%= stats.attempts %></h2>
                                        </div>
                                        <i class="fas fa-tasks fa-3x"></i>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="card stats-card bg-danger text-white mb-3">
                                    <div class="card-body d-flex justify-content-between align-items-center">
                                        <div>
                                            <h5 class="card-title">Security Logs</h5>
                                            <h2><%= stats.securityLogs %></h2>
                                        </div>
                                        <i class="fas fa-shield-alt fa-3x"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="table-container">
                                    <h4>Recent Users</h4>
                                    <div class="table-responsive">
                                        <table class="table table-striped">
                                            <thead>
                                                <tr>
                                                    <th>Role</th>
                                                    <th>Username</th>
                                                    <th>Name</th>
                                                    <th>Email</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% recentUsers.forEach(user => { %>
                                                <tr>
                                                    <td><span class="badge bg-<%= user.role === 'student' ? 'primary' : 'success' %>"><%= user.role %></span></td>
                                                    <td><%= user.username %></td>
                                                    <td><%= user.first_name %> <%= user.last_name %></td>
                                                    <td><%= user.email %></td>
                                                </tr>
                                                <% }); %>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="table-container">
                                    <h4>Recent Quizzes</h4>
                                    <div class="table-responsive">
                                        <table class="table table-striped">
                                            <thead>
                                                <tr>
                                                    <th>ID</th>
                                                    <th>Title</th>
                                                    <th>Creator</th>
                                                    <th>Status</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% recentQuizzes.forEach(quiz => { %>
                                                <tr>
                                                    <td><%= quiz.id %></td>
                                                    <td><%= quiz.title %></td>
                                                    <td><%= quiz.created_by %></td>
                                                    <td>
